{

  "compilerOptions": {
    "target": "es2015",
    "sourceMap": true,
    "module": "commonjs",
    "baseUrl": ".",
    "removeComments": false,
    "noImplicitReturns": true,
    "paths": 
      {"shared/*": ["../shared/*"]},
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "types": ["node", "restify", "chai"],
    "outDir": "built"
  },
  "exclude": [
    "logs",
    "node_modules"
  ],
	"include": ["bin/"]
}
